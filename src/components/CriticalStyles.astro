---
/* no frontmatter needed */
---

<style is:global>
  :root {
    --font-sans: "Rajdhani", sans-serif;
    --text-color: #ddd;
    --bg-color: #111;
    --accent-color: limegreen;
  }

  body {
    font-family: var(--font-sans);
    background-color: var(--bg-color);
    color: var(--text-color);
    margin: 0;
    padding: 0;
  }

  h1,
  h2,
  h3 {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  a {
    color: var(--accent-color);
    position: relative;
    text-decoration: none;
  }

  a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 1px;
    background: var(--accent-color);
    opacity: 0.6;
    transition:
      opacity 0.2s,
      transform 0.2s;
  }

  a:hover::after {
    transform: scaleY(2);
    opacity: 1;
  }

  /* Navbar – appears above the fold */
  nav {
    background-color: #111;
    padding: 1rem;
    margin-bottom: 2rem;
  }

  ul.nav-tabs {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.5rem;
  }

  li.tab {
    position: relative;
    text-align: center;
  }

  .tab-shape {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    line-height: 1;
    transition: top 0.2s ease;
    pointer-events: none;
  }

  .tab:hover .tab-shape {
    top: -18px;
  }

  .tab-shape svg {
    width: 12px;
    height: 12px;
    display: block;
    fill: white !important;
  }

  .tab-link {
    display: inline-block;
    padding: 0.4rem 0.75rem;
    background: #1a1a1a;
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 600;
    border-radius: 4px;
    transition: background 0.2s;
    min-width: 80px;
    font-family: var(--font-sans, sans-serif);
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .tab-link:hover {
    background: #222;
  }

  .tab-link.active {
    background: #00ff00;
    color: black;
  }

  .tab-link.disabled {
    background: #1a1a1a;
    color: #9ca3af;
    cursor: not-allowed;
    pointer-events: none;
    font-style: italic;
  }

  @media (hover: none) {
    .tab-shape {
      display: none;
    }
  }

  .page {
    max-width: 1200px;
    margin: auto;
    padding: 2rem;
  }

  .layout {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
    align-items: flex-start;
    flex-wrap: wrap; /* keep wrap so description can go to next line */
  }

  .layout-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
  }

  .layout-content {
    flex: 1;
  }

  .unit-image {
    flex: 0 0 420px; /* fixed basis */
    max-width: 420px;
  }

  .unit-image-frame {
    width: 100%;
    aspect-ratio: 800 / 450; /* 16:9 */
    border-radius: 10px;
    overflow: hidden;
    background: #0b0b0b; /* prevents “flash” */
  }

  /* Fill the reserved box */
  .unit-img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover; /* or 'contain' if you prefer */
  }

  /* ============================= */
  /* Mobile layout fix for unit pages */
  /* ============================= */
  @media (max-width: 768px) {
    .page {
      padding: 1rem;
    }

    .layout {
      gap: 1rem;
    }

    .unit-image {
      flex: 0 0 auto;
      width: 100%;
      max-width: 100%;
    }

    .unit-image-frame {
      border-radius: 12px;
    }

    .unit-img {
      object-fit: contain;
    }
  }

  html,
  body {
    overflow-x: hidden;
  }

  .stats-panel {
    flex: 1 1 0;
    min-width: 0; /* IMPORTANT: prevents flex overflow reflow */
    width: 100%;
    background: #222;
    border-radius: 12px;
    padding: 1rem 1.5rem;
  }

  .description {
    flex: 0 0 100%;
    width: 100%;
    margin-top: 2rem;
    font-size: 1.2rem;
    line-height: 1.6;
    color: #ccc;
  }
</style>
