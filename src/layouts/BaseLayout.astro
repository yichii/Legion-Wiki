---
import Footer from "../components/Footer.astro";
import CriticalStyles from "../components/CriticalStyles.astro";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const {
  title = "BAR Legion Units - Beyond All Reason Legion Unit Wiki",
  description = "Browse every Legion unit in Beyond All Reason (BAR). LegionWiki is a community wiki with detailed BAR Legion unit stats, roles, roles, costs, and strategies.",
  canonical,
} = Astro.props;

const siteUrl = "https://legionwiki.info";
const resolvedCanonical = canonical ?? Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`${siteUrl}${resolvedCanonical}`} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://legionwiki.info" />
    <meta property="og:image" content="/favicon.png" />

    <link
      rel="preload"
      href="/fonts/Rajdhani/Rajdhani.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <link rel="stylesheet" href="/global.css" />

    <!-- Optional: keep Rajdhani only for noscript users if you want -->
