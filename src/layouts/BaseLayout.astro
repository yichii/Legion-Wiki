---
import "../styles/global.css";
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
}

const { title = "Legion Units" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="layout-wrapper">
    <div class="layout-content">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  .layout-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
  }

  .layout-content {
    flex: 1;
  }
</style>
