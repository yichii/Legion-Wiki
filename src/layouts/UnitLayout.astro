---
import { marked } from 'marked';
import Navbar from '../components/Navbar.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const {
  title, image, counterpart, description,
  metalCost, energyCost, buildTime, health, sightRange,
  speed, weapons, dps, weaponRange, techLevel
} = Astro.props.frontmatter;

const compiledDescription = marked(description);
---

<BaseLayout title={`${title} - Legion Unit`}>
  <Navbar />
  <div class="page">
    <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">{title}</h1>
    
    <div class="layout">
      <div class="unit-image">
        <img src={image} alt={title} style="width: 100%; border-radius: 10px;" />
      </div>
      
      <div class="stats-panel">
        <h3>Tech Level {techLevel}</h3>
        <div class="stat-row"><span>Metal Cost</span><span>{metalCost}</span></div>
        <div class="stat-row"><span>Energy Cost</span><span>{energyCost}</span></div>
        <div class="stat-row"><span>Build Time</span><span>{buildTime}</span></div>
        <div class="stat-row"><span>Health</span><span>{health}</span></div>
        <div class="stat-row"><span>Sight Range</span><span>{sightRange}</span></div>
        <div class="stat-row"><span>Speed</span><span>{speed}</span></div>
        <div class="stat-row"><span>Weapons</span><span>{weapons}</span></div>
        <div class="stat-row"><span>DPS</span><span>{dps}</span></div>
        <div class="stat-row"><span>Weapon Range</span><span>{weaponRange}</span></div>
      </div>
    </div>
    
    <div class="description">
      <div set:html={compiledDescription} />
    </div>
  </div>

  <style>
    .page {
      max-width: 1200px;
      margin: auto;
      padding: 2rem;
    }

    .layout {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      margin-top: 2rem;
    }

    .unit-image {
      flex: 1 1 300px;
      max-width: 400px;
    }

    .stats-panel {
      flex: 1 1 400px;
      background: #222;
      border-radius: 12px;
      padding: 1rem 1.5rem;
    }

    .stats-panel h3 {
      margin-top: 0;
      color: #ccc;
      font-weight: bold;
    }

    .stat-row {
      display: flex;
      justify-content: space-between;
      padding: 0.3rem 0;
      border-bottom: 1px solid #333;
    }

    .description {
      margin-top: 2rem;
      font-size: 1.2rem;
      line-height: 1.6;
      color: #ccc;
    }

    .description p {
      margin-bottom: 1rem;
    }

    .radar-placeholder {
      margin-top: 2rem;
      height: 300px;
      background: #222;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #777;
      font-size: 1.2rem;
    }
  </style>
</BaseLayout>
